package thread;

public class TerminateThread extends Thread{

	private boolean flag = false;
	int i;
	public void run() {
		while(!flag) {
			try {
				sleep(100);
			} catch (InterruptedException e) {
				// TODO Auto-generated catch block
				e.printStackTrace();
			}
		}
		System.out.println("end");
	}
	public static void main(String[] args) {
		TerminateThread t
	}

}
